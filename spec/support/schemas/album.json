{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "file:/album.json#",
  "type": "object",
  "required": [
    "id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "released_at": {
      "type": "string",
      "format": "date"
    },
    "artist_id": {
      "type": "integer"
    },
    "rank": {
      "type": [
        "integer",
        "null"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "songs": {
      "type": "array",
      "items": {
        "$ref": "file:/song.json#"
      }
    }
  }
}
